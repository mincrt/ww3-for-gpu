#!/bin/bash
## The following comment lines are PBS resource requests:
#PBS -q pascalq
#PBS -l ncpus=1
#PBS -l walltime=120
#PBS -e out/run_grid.err
#PBS -o out/run_grid.out

set -eu

module load pgi

## Change directory to where job was submitted:
cd ${PBS_O_WORKDIR}

